<UserControl x:Class="WC_Simulator.View.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:WC_Simulator.ViewModel"
             xmlns:vs="clr-namespace:WC_Simulator.View"
             xmlns:ucs="clr-namespace:WC_Simulator.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="3"
               Grid.Row="0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="1" Grid.ColumnSpan="4"
                   Grid.Row="0" Grid.RowSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Content="Symulator Mistrzostw Świata w Katarze 2022"/>
            <!--Placeholder na logo:-->
            <ListBox Grid.Column="2" Grid.ColumnSpan="2"
                     Grid.Row="2" Grid.RowSpan="3"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>

            <Label Grid.Column="2" Grid.ColumnSpan="2"
                   Grid.Row="5" Grid.RowSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Content="Logowanie"/>
            <TextBlock Grid.Column="2" Grid.ColumnSpan="1"
                       Grid.Row="7" Grid.RowSpan="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Login:"/>
            <ucs:UsernameUserControl Grid.Column="3" Grid.ColumnSpan="1"
                                     Grid.Row="7" Grid.RowSpan="1"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     TBText="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     MinWidth="100"/>
            <TextBlock Grid.Column="2" Grid.ColumnSpan="1"
                       Grid.Row="8" Grid.RowSpan="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Hasło:"/>
            <ucs:BindablePasswordBox Grid.Column="3" Grid.ColumnSpan="1"
                                     Grid.Row="8" Grid.RowSpan="1"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     MinWidth="100"/>
            <Button Grid.Column="2" Grid.ColumnSpan="2"
                    Grid.Row="9" Grid.RowSpan="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="150"
                    Content="Zaloguj się"
                    Command="{Binding Login}"/>
            <Button Grid.Column="2" Grid.ColumnSpan="1"
                    Grid.Row="10" Grid.RowSpan="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="100"
                    Content="Zarejestruj się"
                    Command="{Binding Register}"/>
            <Button Grid.Column="3" Grid.ColumnSpan="1"
                    Grid.Row="10" Grid.RowSpan="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="100"
                    Content="Nie pamiętam hasła"
                    Command="{Binding ResetPassword}"/>

            
        </Grid>
        <!--Do testów:-->
        <ucs:GroupUserControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" Team2PKT="{Binding Test}"/>
    </Grid>
</UserControl>
