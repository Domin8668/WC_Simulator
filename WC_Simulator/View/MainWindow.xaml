<Window x:Class="WC_Simulator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WC_Simulator"
        xmlns:vms="clr-namespace:WC_Simulator.ViewModel"
        xmlns:vs="clr-namespace:WC_Simulator.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Symulator Mistrzostw Świata" Height="1080" Width="1920" ResizeMode="NoResize">
    <Window.Resources>
        <vms:MainViewModel x:Key="mainVM"/>
    </Window.Resources>
    <ContentControl DataContext="{StaticResource mainVM}" Content="{Binding CurrentViewModel}"
                    Background="Aqua">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type vms:LoginViewModel}">
                <vs:Login/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:RegisterViewModel}">
                <vs:Register/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ResetPasswordViewModel}">
                <vs:ResetPassword/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
