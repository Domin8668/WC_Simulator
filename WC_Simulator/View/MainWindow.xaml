<Window x:Class="WC_Simulator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WC_Simulator"
        xmlns:vm="clr-namespace:WC_Simulator.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Symulator Mistrzostw Świata" Height="600" Width="800" ResizeMode="NoResize" WindowState="Maximized">
    <Window.Resources>
        <vm:MainViewModel x:Key="mainVM"/>
    </Window.Resources>
    <ContentControl DataContext="{StaticResource mainVM}" Content="{Binding CurrentViewModel}"/>
</Window>
