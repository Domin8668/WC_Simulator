<UserControl x:Class="WC_Simulator.View.KnockoutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:WC_Simulator.ViewModel"
             xmlns:vs="clr-namespace:WC_Simulator.View"
             xmlns:ucs="clr-namespace:WC_Simulator.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <Grid Background="AliceBlue">
        <TabControl>
            <TabItem x:Name="finals1_8" Header="1/8 Finału">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="0" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="2" Grid.Column="0" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="1" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="2" Grid.Column="1" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="2" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="2" Grid.Column="2" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="3" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="2" Grid.Column="3" Margin="10"/>

                </Grid>
                

            </TabItem>


            <TabItem x:Name="quarter_finals" Header="Ćwierćfinały">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="1" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="2" Grid.Column="1" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="2" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="2" Grid.Column="2" Margin="10"/>
                </Grid>

            </TabItem>


            <TabItem x:Name="semi_finals" Header="Półfinały">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="1" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="2" Margin="10"/>
                </Grid>

            </TabItem>


            <TabItem x:Name="final" Header="Finał">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="1" Margin="10"/>
                    <ucs:MatchUserControl Grid.Row="1" Grid.Column="2" Margin="10"/>
                </Grid>

            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
