<UserControl x:Class="WC_Simulator.View.KnockoutsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vms="clr-namespace:WC_Simulator.ViewModel"
             xmlns:vs="clr-namespace:WC_Simulator.View"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

             xmlns:ucs="clr-namespace:WC_Simulator.View.Components"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
            <LinearGradientBrush.GradientStops>
                <GradientStop Offset="0.1" Color="#c9f3c6" />
                <GradientStop Offset="1" Color="#e8bef4" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </UserControl.Background>
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="labels">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TabItem" x:Key="tabItemStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="0 0 5 0"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <TabControl Background="Transparent" SelectedIndex="{Binding Model.CurrentKnockout, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <TabItem x:Name="finals1_8" Header="1/8 Finału" Style="{DynamicResource tabItemStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="Mecze o wejście do ćwierćfinałów" Style="{StaticResource labels}"/>
                    <ucs:MatchUserControl x:Name="match49" Grid.Row="2" Grid.Column="0" Margin="10" FontSize="45"
                                          Team1FlagPath="{Binding Matches16[0].Flag_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2FlagPath="{Binding Matches16[0].Flag_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1ShortName="{Binding Matches16[0].Short_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2ShortName="{Binding Matches16[0].Short_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1Result="{Binding Matches16[0].Goals_first_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2Result="{Binding Matches16[0].Goals_second_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MatchCommand="{Binding MatchCommand}"
                                          ResultsEnabled="{Binding Enabled18, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Numbers="{Binding Model.Numbers, Mode=OneWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Team1ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Team2ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ucs:MatchUserControl>
                    <ucs:MatchUserControl x:Name="match50" Grid.Row="3" Grid.Column="0" Margin="10" FontSize="45"
                                          Team1FlagPath="{Binding Matches16[1].Flag_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2FlagPath="{Binding Matches16[1].Flag_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1ShortName="{Binding Matches16[1].Short_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2ShortName="{Binding Matches16[1].Short_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1Result="{Binding Matches16[1].Goals_first_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2Result="{Binding Matches16[1].Goals_second_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MatchCommand="{Binding MatchCommand}"
                                          Numbers="{Binding Model.Numbers, Mode=OneWay}"
                                          ResultsEnabled="{Binding Enabled18, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Team1ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Team2ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
