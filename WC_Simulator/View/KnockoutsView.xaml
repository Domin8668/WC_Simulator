                            <i:EventTrigger EventName="Team2ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ucs:MatchUserControl>
                    <ucs:MatchUserControl x:Name="match55" Grid.Row="2" Grid.Column="3" Margin="10" FontSize="45"
                                          Team1FlagPath="{Binding Matches16[6].Flag_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2FlagPath="{Binding Matches16[6].Flag_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1ShortName="{Binding Matches16[6].Short_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2ShortName="{Binding Matches16[6].Short_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1Result="{Binding Matches16[6].Goals_first_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2Result="{Binding Matches16[6].Goals_second_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MatchCommand="{Binding MatchCommand}"
                                          Numbers="{Binding Model.Numbers, Mode=OneWay}"
                                          ResultsEnabled="{Binding Enabled18, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Team1ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Team2ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ucs:MatchUserControl>
                    <ucs:MatchUserControl x:Name="match56" Grid.Row="3" Grid.Column="3" Margin="10" FontSize="45"
                                          Team1FlagPath="{Binding Matches16[7].Flag_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2FlagPath="{Binding Matches16[7].Flag_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1ShortName="{Binding Matches16[7].Short_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2ShortName="{Binding Matches16[7].Short_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1Result="{Binding Matches16[7].Goals_first_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2Result="{Binding Matches16[7].Goals_second_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MatchCommand="{Binding MatchCommand}"
                                          Numbers="{Binding Model.Numbers, Mode=OneWay}"
                                          ResultsEnabled="{Binding Enabled18, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Team1ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Team2ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ucs:MatchUserControl>

                </Grid>
            </TabItem>


            <TabItem x:Name="quarter_finals" Header="Ćwierćfinały" Style="{DynamicResource tabItemStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="249*"/>
                        <ColumnDefinition Width="274*"/>
                        <ColumnDefinition Width="273*"/>
                        <ColumnDefinition Width="273*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.3*"/>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="1.1*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Text="Mecze o wejście do półfinałów" Style="{StaticResource labels}" Margin="134,12"/>
                    <ucs:MatchUserControl x:Name="match58" Grid.Row="2" Grid.Column="2" Margin="10"
                                          ResultsEnabled="{Binding Enabled14}"/>
                    <ucs:MatchUserControl x:Name="match57" Grid.Row="3" Grid.Column="2" Margin="10"/>
                    <ucs:MatchUserControl x:Name="match60" Grid.Row="2" Grid.Column="3" Margin="10"/>
                    <ucs:MatchUserControl x:Name="match59" Grid.Row="3" Grid.Column="3" Margin="10"/>
                </Grid>

            </TabItem>


            <TabItem x:Name="semi_finals" Header="Półfinały" Style="{DynamicResource tabItemStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="Mecze o wejście do finału" Style="{StaticResource labels}"/>
                    <ucs:MatchUserControl x:Name="match61" Grid.Row="2" Grid.Column="1" Margin="10"
                                          ResultsEnabled="{Binding Enabled12}"/>
                    <ucs:MatchUserControl x:Name="match62" Grid.Row="2" Grid.Column="2" Margin="10"/>
                </Grid>

            </TabItem>


            <TabItem x:Name="final" Header="Finał" Style="{DynamicResource tabItemStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Mecz o 1. miejsce" Style="{StaticResource labels}"/>
                    <ucs:MatchUserControl x:Name="match64" Grid.Row="2" Grid.Column="1" Margin="10"
                                          ResultsEnabled="{Binding Enabled1}"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Mecz o 3. miejsce" Style="{StaticResource labels}"/>
                    <ucs:MatchUserControl x:Name="match63" Grid.Row="2" Grid.Column="2" Margin="10"/>
                </Grid>

            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
