                                          Team2FlagPath="{Binding Matches16[2].Flag_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1ShortName="{Binding Matches16[2].Short_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2ShortName="{Binding Matches16[2].Short_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1Result="{Binding Matches16[2].Goals_first_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2Result="{Binding Matches16[2].Goals_second_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MatchCommand="{Binding MatchCommand}"
                                          Numbers="{Binding Model.Numbers, Mode=OneWay}"
                                          ResultsEnabled="{Binding Enabled18, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Team1ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Team2ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ucs:MatchUserControl>
                    <ucs:MatchUserControl x:Name="match51" Grid.Row="3" Grid.Column="1" Margin="10" FontSize="45"
                                          Team1FlagPath="{Binding Matches16[3].Flag_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2FlagPath="{Binding Matches16[3].Flag_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1ShortName="{Binding Matches16[3].Short_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2ShortName="{Binding Matches16[3].Short_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1Result="{Binding Matches16[3].Goals_first_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2Result="{Binding Matches16[3].Goals_second_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MatchCommand="{Binding MatchCommand}"
                                          Numbers="{Binding Model.Numbers, Mode=OneWay}"
                                          ResultsEnabled="{Binding Enabled18, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Team1ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Team2ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ucs:MatchUserControl>
                    <ucs:MatchUserControl x:Name="match53" Grid.Row="2" Grid.Column="2" Margin="10" FontSize="45"
                                          Team1FlagPath="{Binding Matches16[4].Flag_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2FlagPath="{Binding Matches16[4].Flag_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1ShortName="{Binding Matches16[4].Short_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2ShortName="{Binding Matches16[4].Short_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1Result="{Binding Matches16[4].Goals_first_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2Result="{Binding Matches16[4].Goals_second_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MatchCommand="{Binding MatchCommand}"
                                          Numbers="{Binding Model.Numbers, Mode=OneWay}"                                   
                                          ResultsEnabled="{Binding Enabled18, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Team1ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Team2ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ucs:MatchUserControl>
                    <ucs:MatchUserControl x:Name="match54" Grid.Row="3" Grid.Column="2" Margin="10" FontSize="45"
                                          Team1FlagPath="{Binding Matches16[5].Flag_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2FlagPath="{Binding Matches16[5].Flag_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1ShortName="{Binding Matches16[5].Short_first, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2ShortName="{Binding Matches16[5].Short_second, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team1Result="{Binding Matches16[5].Goals_first_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Team2Result="{Binding Matches16[5].Goals_second_team, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          MatchCommand="{Binding MatchCommand}"
                                          Numbers="{Binding Model.Numbers, Mode=OneWay}"
                                          ResultsEnabled="{Binding Enabled18, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Team1ResultChanged">
                                <i:InvokeCommandAction Command="{Binding CheckRoundOf16}"/>
